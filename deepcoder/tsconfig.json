{
    "compilerOptions": {
        "module": "Node16",  // or "ESNext"
        "moduleResolution": "Node16",
        "target": "ES2022",
        "outDir": "out",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true  // Add this to skip node_modules type checking
    },
    "exclude": ["node_modules", ".vscode-test"]
}